
//- Although this isn’t strictly a help template, it uses the same data and helpers.
template(name='topic_header')
  if variant
    p Topic:
      em #{unitTitle}
      span --- 
      a(href='/course/#{courseName}/exercise-set/#{variant}')  #{variant} exercises for #{courseName}


template(name="help_with_this_exercise")
  if slidesForThisUnit
    h4 Help with this exercise
    p 
      span Review the 
      a(href="#{slidesForThisUnit}", target="_blank") lecture slides on 
        em #{unitTitle}
      if readingForThisUnit
        span  and read #{readingForThisUnit}
      span .


template(name="ask_for_help")
  if Template.subscriptionsReady 
    each helpRequests
      .row: .col.s12: .right 
        span You asked for help #{helpRequestDate}
        span (‘#{question}’)
        if isHelpRequestAnswered
          span #{answererName} answered #{helpAnswerDate}: #{answer}
        else
          span There is no answer yet.
  

  button#request-help.btn.waves-effect.grey(data-target="request-help_modal") ask for help
   i.material-icons.right live_help

  #request-help_modal.modal
    .modal-content
      h4 Ask for help
      form
        if slidesForThisUnit
          p 
            input(type='checkbox', id='reviewed-lecture-slides')
            label(for='reviewed-lecture-slides') I have reviewed the 
              a(href="#{slidesForThisUnit}", target="_blank") lecture slides on 
                em #{unitTitle}
        if readingForThisUnit
          p 
            input(type='checkbox', id='read-textbook')
            label(for='read-textbook') I have read #{readingForThisUnit}
        .input-field
          textarea.materialize-textarea(id='request-for-help-description')
          label(for='request-for-help-description') What are you stuck on?
        p: em Requests for help may go unanswered outside of the weeks in which lectures are given for your course.
        if notYetSubmitted
          p: em Requesting help will cause your current answer to be submitted (even if it’s blank).
    .modal-footer
      a(href="").modal-action.modal-close.waves-effect.waves-grey.btn-flat cancel
      a(href="")#confirm-request-help.modal-action.modal-close.waves-effect.waves-grey.btn-flat send


