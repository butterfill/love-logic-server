template(name='TorF_ex')
  +topic_header

  +TorF_ex_display_question_header

  +TorF_questions sentences=sentences
  
  +submitted_answer

  +help_with_this_exercise

  .right
    +ask_for_help
    +submit_btn
        
  +next_exercise


template(name="TorF_ex_display_question_header")
  if isArgument
    h4 Consider this argument:
    +display_argument
  if isWorld
    h4 Here is a possible situation:
    +possible_world_from_param

  if isTTrow
    h4 Here is a possible situation:
    table.truthtable
      thead
        tr
          each TTletters
            th.center(width='2em') #{this}
      tbody
        tr 
          each TTvalues
            td.center(width='2em') #{this}


  if isJustOneSentence
    h4 Is the following sentence true or false?
  else
    h4 Which of the following are true and which false?
  

template(name="TorF_ex_display_question")
  +TorF_ex_display_question_header
  +TorF_questions sentences=sentences

template(name="TorF_ex_display_answer")
  ul.collection
    each sentences
      li.collection-item 
        span.right(style='font-weight:bold;margin-left:1em;') #{value}
        span.theSentence #{idx}. #{theSentence}
  

template(name="display_argument")
  table(style='width:auto; margin-left:2em;')
    tbody
      if hasPremises
        each premises
          tr(style="border-left: 1px solid black;")
            td(width="1em")
            td: div(style="margin-left:-1em;") #{this}
      else
        tr(style="border-left: 1px solid black;")
          td(width="1em")
          td: div(style="margin-left:-1em;") &nbsp;
      
      tr(style="border-left: 1px solid black;")
        td(width="1em", style="border-top:1px solid black;padding-right:1em;")
        td: div(style="margin-left:-1em;") #{conclusion}

