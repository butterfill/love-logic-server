template(name="trans_ex")
  +topic_header
  
  +trans_ex_display_question

  +editSentence editorId="awFOLeditor" sentenceIsAwFOL=sentenceIsAwFOL

  +submitted_answer  

  +help_with_this_exercise

  .row: .col.s12
    .right
      +ask_for_help
      +submit_btn
  
  +next_exercise

                
template(name="trans_ex_display_question")
  if isTranslateToEn
    h2 Translate awFOL to English
  else
    h2 Translate English to awFOL
  .row
    .col.s6
      h4 domain
      ul.collection
        li.collection-item #{domain}
      
      h4 names
      ul.collection
        if isNames
          each names
            li.collection-item #{this}
        else
          li.collection-item [no names]
    .col.s6
      h4 predicates
      ul.collection
        each predicates
          li.collection-item #{this.description}
  .row
    .col.s12
      h4 sentence
      ul.collection
        li.collection-item #{sentence}
  


template(name="trans_ex_display_answer")
  p.monospace.grey.lighten-2 
    if answer.answerFOL
      | #{answer.answerFOL}
    else
      | #{answer.content.sentence}
    

