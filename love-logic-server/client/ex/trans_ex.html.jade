template(name="trans_ex")
  .section: .container
    h2 #{exTitle}
    .row
      .col.s6
        h4 domain
        ul.collection
          each domain
            li.collection-item #{this}
          
        h4 names
        ul.collection
          each names
            li.collection-item #{this}
      .col.s6
        h4 predicates
        ul.collection
          each predicates
            li.collection-item #{this.description}
    .row
      .col.s12
        h4 sentence
        ul.collection
          li.collection-item #{sentence}
    
    h4 your answer
    textarea#editor 
    
    if isSubmitted
      p.right You submitted an answer #{dateSubmitted}.
        span [
        a(href='') view answer
        span ]
        if isMachineFeedback
          span  Machine says: #{machineFeedback}
        //- if isTutorFeedback
        //-   span  #{tutorName} says: #{tutorFeedback}
      
    p#feedback
    
    .right
      button#requestHelp.btn.waves-effect.grey request help
       i.material-icons.right live_help
      button#submit.btn.waves-effect.grey(type='submit') submit
       i.material-icons.right send