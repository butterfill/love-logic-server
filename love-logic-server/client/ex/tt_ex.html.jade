template(name='tt_ex')
  +topic_header

  +tt_ex_display_question

  +truth_table

  if isArgument
    +TorF_questions sentences=sentences 

  +submitted_answer

  +help_with_this_exercise

  .right
    +ask_for_help
    +submit_btn
        
  +next_exercise

template(name="tt_ex_display_question")

  if isSentences
    h4 Construct truth tables for these sentences
    ul.collection
      each sentences
        li.collection-item 
          span.theSentence #{idx}. #{theSentence}
  
  if isArgument
    h4 Construct truth tables for this argument
    .row: .col.s11.offset-s1
      +display_argument
  


template(name="tt_ex_display_answer")
  +truth_table_static
  if isArgument
    ul.collection
      each sentences
        li.collection-item 
          span.theSentence #{theSentence}
          span.right #{value}
  