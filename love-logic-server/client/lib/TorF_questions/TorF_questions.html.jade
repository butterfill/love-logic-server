//-  Use like:
//-     +TorF_questions sentences=sentences


template(name="TorF_questions")
  ul.collection
    //- `sentences` is provided as a parameter to the templae
    each sentences
      li.collection-item 
        span.right.trueOrFalseInputs
          input.true.trueOrFalse.with-gap.grey(name="tOrF_for_#{idx}", value="true", type="radio",id="true_for_#{idx}",  checked='#{isTrueChecked}')
          label.true(for="true_for_#{idx}") true
          input.false.trueOrFalse.with-gap.grey(name="tOrF_for_#{idx}", value="false", type="radio",id="false_for_#{idx}",  checked='#{isFalseChecked}')
          label.false(for="false_for_#{idx}") false
        span.theSentence 
          if doNotDisplayNumbers
            | #{theSentence}
          else
            | #{idx}. #{theSentence}

